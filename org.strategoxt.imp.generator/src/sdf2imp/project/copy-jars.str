module sdf2imp/project/copy-jars

imports
  libstratego-lib
  sdf2imp/options
  sdf2imp/lib/debug

strategies
  
  copy-jars =
    if JarLocations then
      verbose-msg(!"Copying jar files", JarLocations; separate-by(|","); concat-strings);
      <file-exists <+ mkdir> "utils";
      JarLocations;
      list-loop(<copy-file> (<id>, "utils"))
    end
