module project/create-plugin-xml

imports
  sdf2imp/util/-

strategies

  create-plugin-xml =
    <file-exists> "plugin.xml"
  <+
    name := <get-sdf-main-module>;
    <output-text-file(|[], "plugin.xml")>
    $[<?xml version="1.0" encoding="UTF-8"?>
      <?eclipse version="3.0"?>
      <plugin>
        <extension point="org.metaborg.spoofax.eclipse.language">
          <language esvFile="include/[name].packed.esv" />
        </extension>
      </plugin>
    ]
